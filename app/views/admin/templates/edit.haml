%li.form-active{ 'data-template-id' => resource.id }
  .form-content
    = form_for [:admin, :manage, association_chain, resource].flatten do |f|
      .large-title
        %label.title Page Title
        %span.input 
  
      %ol.fields
        %li
          %label First Name
          %span.input
        %li
          %label First Name
          %span.input
        %li
          %label First Name
          %span.input
        %li.textarea
          %label First Name
          %span.textarea
  
      .actions
        = link_to 'Add Field', '#'
        |
        = f.submit
  .code-content
    = form_for [:admin, :manage, association_chain, resource].flatten do |f|
      = f.text_area :content
      .actions
        = f.submit

  %ol.toggle-content.tab-collection
    %li= link_to 'Form View', '#', :class => 'tab bottom active', 'data-view' => 'form'
    %li= link_to 'Code View', '#', :class => 'tab bottom', 'data-view' => 'code'