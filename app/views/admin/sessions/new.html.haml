#login
  = form_for resource, :as => resource_name, :url => session_path(resource_name) do |f|
    %h2 Sign In
    - if flash[:failure]
      %p.message.failure= flash[:failure]
    %fieldset
      = f.label :login
      = f.text_field :login, :value => 'dane'
    %fieldset
      = f.label :password
      = f.password_field :password, :value => 'password'
    %fieldset#remember-me
      = f.check_box :remember_me
      = f.label :remember_me
    %div
      = f.submit 'Sign In'
