= form_for resource, :as => resource_name, :url => session_path(resource_name) do |f|
  %h2 Sign In
  - if flash[:failure]
    %p.message.failure= flash[:failure]
  %fieldset
    = f.label :email
    = f.text_field :email
  %fieldset
    = f.label :password
    = f.password_field :password
  %fieldset#remember-me
    = f.check_box :remember_me
    = f.label :remember_me
  %div
    = f.submit 'Sign In'
